---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";

const releaseData = await fetch(
  "https://api.github.com/repos/leoboyerbx/ingenium-launcher/releases/latest"
).then((r) => r.json());

// console.log(
